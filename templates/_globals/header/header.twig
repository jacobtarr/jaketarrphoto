<header
  x-data="headerState" 
  x-init="init(); $watch('open', value => document.body.classList.toggle('mobile-menu-is-active', value))" 
  class="c-header">
  <div class="c-header__inner">
    {% include '_components/logo/logo.twig' with {
      logo: {
        classes: ''
      }
    } %}
    {% set navLinks = [
      { href: '/about',     label: 'About' },
      { href: '/portfolio', label: 'Portfolio' },
      { href: '/blog',      label: 'Blog' },
      { href: '/contact',   label: 'Contact' },
    ] %}

    <nav class="c-nav" aria-label="Primary">
      {% include '_patterns/nav-group/nav-group.twig' with {
        navGroup: {
          links: navLinks,
          useActive: true
        }
      } %}
    </nav>

    <div class="c-header__right-content">
      {% include '_components/switch/switch.twig' with {
        switch: {
          srLabel: 'Toggle dark mode',
          iconOff: 'moon',
          iconOn:  'sun',
        }
      } %}
      

      <div :class="{ 'is-active': open }" class="c-mobile-menu">
        <div class="c-hamburger flex md:hidden">
          <button 
            @click="open = !open"
            :class="{ 'is-active': open }"
            class="hamburger hamburger--squeeze"
            type="button"
            aria-label="Main navigation menu"
            :aria-expanded="open.toString()"
            aria-controls="mobile-nav">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </button>
        </div>

        <div
          id="mobile-nav"
          x-show="open"
          x-transition.opacity.duration.150ms
          class="c-mobile-nav flex md:hidden"
          role="navigation"
          aria-label="Mobile site links">
          <div class="c-mobile-nav__inner container space-y-15">
            {% include '_patterns/nav-group/nav-group.twig' with {
              navGroup: {
                links: navLinks,
                classes: 'c-nav-group--mobile'
              }
            } %}
            <div class="c-mobile-nav__footer space-y-2">
              {% include '_components/heading/heading.twig' with {
                "heading": {
                  "classes": 'o-heading--h3',
                  "tag": "h5",
                  "underline": false,
                  "highlightLast": false,
                  "text": 'Find me on Social Media:'
                }
              } %}
              <ul class="space-y-2">
                <li><a class="text-3xl font-bold leading-tight text-gray-500 hover:text-red-500" href="#">Instagram</a></li>
                <li><a class="text-3xl font-bold leading-tight text-gray-500 hover:text-red-500" href="#">Facebook</a></li>
              </ul>
            </div>
          </div>
          
        </div>
      </div>

    </div>

    

    
  </div>
</header>
