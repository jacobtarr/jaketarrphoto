{% extends '_layouts/global.twig' %}

{% block site %}
  <div class="c-homepage-blocks">
    {# Loop through each block in the matrix field #}
    {% for block in entry.homepageBlocks %}
      {# Dynamically include the block template based on the block handle #}
      {% include '_blocks/' ~ block.type ~ '.twig' with { block: block } %}
    {% endfor %}
  </div>
{% endblock %}