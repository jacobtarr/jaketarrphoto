{% set fonts = {
  'Founders Grotesk': [
    {
      file: 'founders-grotesk-regular',
      weight: 400,
      style: 'normal'
    },
    {
      file: 'founders-grotesk-regular-italic',
      weight: 400,
      style: 'italic'
    },
    {
      file: 'founders-grotesk-semibold',
      weight: 600,
      style: 'normal'
    },
    {
      file: 'founders-grotesk-bold',
      weight: 700,
      style: 'normal'
    }
  ]
} %}

{% for family, styles in fonts %}
  {% for font in styles %}
    <link rel="preload" href="/dist/fonts/{{ font.file }}.woff2" as="font" type="font/woff2" crossorigin>
    <style>
      @font-face {
        font-family: "{{ family }}";
        src: url("/dist/fonts/{{ font.file }}.woff2") format("woff2"),
             url("/dist/fonts/{{ font.file }}.woff") format("woff");
        font-weight: {{ font.weight }};
        font-style: {{ font.style }};
        font-display: swap;
      }
    </style>
  {% endfor %}
{% endfor %}