{%- minify -%}

<!doctype html>
<html class="no-js" lang="{{ craft.app.language|slice(0,2) }}">
	<head>

		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.typekit.net/ziu3lge.css" />

		{# Fonts #}
		{{ include ('_components/fonts', ignore_missing = true) }}

		{# CSS / JS #}
		{{ craft.vite.script('/src/index.js', false) }}

		{# Favicons #}
		{{ craft.vite.inline('@webroot/dist/favicons/webapp.html') }}

		{# AlpineJS "blip" Fix #}
		<style>
			[x-cloak] {
				display: none;
			}
		</style>

	</head>

	<body>

		{% block body %}{% endblock %}

	</body>

</html>

{%- endminify -%}
