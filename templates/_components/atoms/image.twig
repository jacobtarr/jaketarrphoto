{# _macros/image.twig #}
{% macro renderImage(image, smallWidth, largeWidth, altText, transform = null) %}
  <img src="{{ transform ? image.getUrl(transform) : image.getUrl('large') }}"
       srcset="{% if transform %}{{ image.getUrl(transform) }} 800w{% else %}{{ image.getUrl('small') }} {{ smallWidth }}w, {{ image.getUrl('large') }} {{ largeWidth }}w{% endif %}"
       sizes="(max-width: 768px) 100vw, 50vw"
       alt="{{ altText }}"
       class="w-full h-full object-cover">
{% endmacro %}
