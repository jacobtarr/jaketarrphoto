{# 
  Expects:
    kicker = {
      classes?: string                  # extra classes for the wrapper <div>
      attrs?: { [key: string]: string } # additional HTML attributes for the wrapper
      text?: string                     # required kicker text (nothing renders if empty)
      icon?: string                     # optional icon name (e.g. 'star' â†’ includes icon-star.svg)
    }

  Example usage:
    {% include '_components/atoms/kicker.twig' with {
      kicker: {
        classes: 'text-gray-500',
        attrs: { id: 'intro-kicker' },
        text: 'Featured Work',
        icon: 'arrow'
      }
    } %}
#}

{% set additionalClasses = kicker.classes is defined and kicker.classes ? ' ' ~ kicker.classes : '' %}
{% set attrs = kicker.attrs ?? {} %}

{% if kicker.text is defined and kicker.text %}
  <div class="o-kicker{{ additionalClasses }}"
    {% for key, value in attrs %}
      {{ key }}="{{ value is iterable ? value|join(',') : value }}"
    {% endfor %}
  >
    {% if kicker.icon is defined and kicker.icon|length %}
      {{ include('_components/atoms/icons/icon-' ~ kicker.icon ~ '.svg', ignoreMissing=true) }}
    {% endif %}
    <span>{{ kicker.text }}</span>
  </div>
{% endif %}
