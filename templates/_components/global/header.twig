<header x-data="headerState()" class="c-header w-full py-4 border-b border-lightgray bg-white">
  <div class="container mx-auto grid grid-cols-12 items-center justify-between">
    <!-- Left logo and name section -->
    <a href="/" class="c-logo col-span-3 flex items-center space-x-3">
      {% include '_components/atoms/icons/logo.svg' %}
      <h1 class="text-xs font-bold leading-3">
        Jacob Tarr <span class="text-red"><br>Photography.</span>
      </h1>
    </a>

    <!-- Center navigation links -->
    <nav class="c-header__navigation col-span-6 flex justify-center">
      <a href="/about" class="px-7 text-lg font-semibold hover:text-red" :class="{'text-red': isActive('/about')}">About</a>
      <a href="/portfolio" class="px-7 text-lg font-semibold hover:text-red" :class="{'text-red': isActive('/portfolio')}">Portfolio</a>
      <a href="/blog" class="px-7 text-lg font-semibold hover:text-red" :class="{'text-red': isActive('/blog')}">Blog</a>
      <a href="/contact" class="px-7 text-lg font-semibold hover:text-red" :class="{'text-red': isActive('/contact')}">Contact</a>
    </nav>

    <!-- Right side icons -->
    <div class="c-header__icons col-span-3 flex justify-end space-x-8 items-center">
      <!-- Light/dark mode icon -->
      <button @click="toggleDarkMode()" class="text-black focus:outline-none">
        <template x-if="darkMode">
          {% include '_components/atoms/icons/icon-light-mode.svg' %}
        </template>
        <template x-if="!darkMode">
          {% include '_components/atoms/icons/icon-dark-mode.svg' %}
        </template>
      </button>

      <!-- Instagram icon -->
      <a href="https://instagram.com/jacobtarr" class="text-black hover:text-red-500">
        {% include '_components/atoms/icons/icon-instagram.svg' %}
      </a>
    </div>
  </div>
</header>
