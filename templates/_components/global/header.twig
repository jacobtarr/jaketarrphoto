<header
  up-id="global-header"
  x-data="headerState" 
  x-init="init(); $watch('open', value => document.body.classList.toggle('mobile-menu-is-active', value))" 
  class="c-header">
  <div class="c-header__inner">
    {% include '_components/atoms/logo.twig' with {
      logo: {
        classes: ''
      }
    } %}
    <nav class="c-nav">
      <a href="/about" up-target="main" @click="setActivePage('/about')" class="font-founders uppercase tracking-widest px-7 text-sm font-semibold hover:text-red-500" :class="{'text-red-500': isActive('/about')}">About</a>
      <a href="/portfolio" up-target="main" @click="setActivePage('/portfolio')" class="font-founders uppercase tracking-widest px-7 text-sm font-semibold hover:text-red-500" :class="{'text-red-500': isActive('/portfolio')}">Portfolio</a>
      <a href="/blog" up-target="main" @click="setActivePage('/blog')" class="font-founders uppercase tracking-widest px-7 text-sm font-semibold hover:text-red-500" :class="{'text-red-500': isActive('/blog')}">Blog</a>
      <a href="/contact" up-target="main" @click="setActivePage('/contact')" class="font-founders uppercase tracking-widest px-7 text-sm font-semibold hover:text-red-500" :class="{'text-red-500': isActive('/contact')}">Contact</a>
    </nav>

    <div class="c-header__mobile-wrapper">
      <div class="c-header__icons">
        <button
          @click="toggleDarkMode()"
          class="text-gray-900 focus:outline-none"
          aria-label="Toggle dark mode"
        >
          <template x-if="darkMode">
            {% include '_components/atoms/icons/icon-light-mode.svg' %}
          </template>
          <template x-if="!darkMode">
            {% include '_components/atoms/icons/icon-dark-mode.svg' %}
          </template>
        </button>
      </div>

      <div :class="{ 'is-active': open }" class="c-mobile-menu">
        <div class="c-hamburger flex md:hidden">
          <button 
            @click="open = !open"
            :class="{ 'is-active': open }"
            class="hamburger hamburger--squeeze"
            type="button"
            aria-label="Main navigation menu"
            :aria-expanded="open.toString()"
            aria-controls="mobile-nav">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </button>
        </div>

        {% set mobileLinkClasses = "text-4xl font-semibold text-white hover:text-red-500" %}

        <div
          id="mobile-nav"
          x-show="open"
          x-transition.opacity.duration.150ms
          class="c-mobile-nav flex md:hidden"
          role="navigation"
          aria-label="Mobile site links">
          <div class="c-mobile-nav__inner container space-y-15">
            <ul class="c-mobile-nav__list space-y-2">
              <li>
                <a href="/about" @click="setActivePage('/about')" class="{{ mobileLinkClasses }}" :class="{'text-red-500': isActive('/about')}">About</a>
              </li>
              <li>
                <a href="/portfolio" @click="setActivePage('/portfolio')" class="{{ mobileLinkClasses }}" :class="{'text-red-500': isActive('/portfolio')}">Portfolio</a>
              </li>
              <li>
                <a href="/blog" @click="setActivePage('/blog')" class="{{ mobileLinkClasses }}" :class="{'text-red-500': isActive('/blog')}">Blog</a>
              </li>
              <li>
                <a href="/contact" @click="setActivePage('/contact')" class="{{ mobileLinkClasses }}" :class="{'text-red-500': isActive('/contact')}">Contact</a>
              </li>
            </ul>
            <div class="c-mobile-nav__footer space-y-2">
              {% include '_components/atoms/heading.twig' with {
                "heading": {
                  "classes": 'o-heading--h3',
                  "tag": "h5",
                  "underline": false,
                  "highlightLast": false,
                  "text": 'Find me on Social Media:'
                }
              } %}
              <ul class="space-y-2">
                <li><a class="text-3xl font-bold leading-tight text-gray-500 hover:text-red-500" href="#">Instagram</a></li>
                <li><a class="text-3xl font-bold leading-tight text-gray-500 hover:text-red-500" href="#">Facebook</a></li>
              </ul>
            </div>
          </div>
          
        </div>
      </div>

    </div>

    

    
  </div>
</header>
