{% extends '_base/_basePageBlock.twig' %}

{% block pageBlockContent %}
  {% set calloutBoxColumns = [] %}
  {% for column in block.pageCalloutColumns %}
    {% set calloutBoxColumns = calloutBoxColumns | merge([{
      title: column.pageSubtitle,
      description: column.pageContent,
      pageButtons: column.pageButtons ?? []
    }]) %}
  {% endfor %}

  {% include '_components/molecules/callout-box.twig' with {
    "calloutBox": {
      "columns": 3,
      "calloutBoxColumns": calloutBoxColumns
    }
  } %}
{% endblock %}