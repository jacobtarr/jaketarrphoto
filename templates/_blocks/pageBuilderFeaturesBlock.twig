{% extends '_base/_basePageBlock.twig' %}

{% block pageBlockContent %}
  {% set features = [] %}
  {% for box in block.pageFeatures %}
    {% set features = features | merge([{
      title: box.contentHeading,
      description: box.contentBody,
      contentLink: box.contentLink
    }]) %}
  {% endfor %}

  {% include '_components/molecules/features.twig' with {
    "feature": {
      "columns": 3,
      "features": features
    }
  } %}
{% endblock %}